{% extends 'MainBundle:Default:base.html.twig' %}

{% block body %}
<h1>You're Home</h1>

{% if app.session.hasFlash('notice') %}
    <div class="flash-notice">
        {{ app.session.flash('notice') }}
    </div>
{% endif %}

<h2>Categories:</h2>
<ul> 
{% for category in categories %}
    <li>{{category.name}}</li>
{% else %}
    <li> No Categories Found </li>
{% endfor %}
</ul>
{% endblock %}
